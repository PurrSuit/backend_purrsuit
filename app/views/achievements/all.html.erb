<!DOCTYPE html>
<html>
	<head>
		<%= stylesheet_link_tag "stylesheet.css" %>
	</head>
	<body>
    <img src="<%= asset_path('PurrsuitPersonagem.png') %>" class="other-page purrSuitImage" />
		<div class="principalSquare">
    <% if current_user && current_user.admin? %>
			<ul class="nav nav-pills">
				<li role="presentation" class="active"><a href="#">Achievement</a></li>
				<li role="presentation"><%= link_to "Quests", :quests_all%></li>
      <li role="presentation"><%= link_to "Logout", logout_path%></li>
			</ul>
			<%= button_to "New Achievement", :achievements_new, :class => "btn btn-default btn-lg create_button", :method => :get%>
			<div class="listSquare">
				<% @achievement.each do | a | %>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title"><%= a.name %></h3>
							<span class="label label-default">Achievement</span>
						</div>
						<div class="panel-body">
							<%= a.description%><br>
							<div class="btn-toolbar button_group" role="group">	
								<%= button_to "Edit", achievements_edit_path(a), :method => :get, :class => "option_button btn btn-default btn-xs" %>
								<%= button_to "Delete", achievements_delete_path(a), :method => :delete, :class => "option_button btn btn-default btn-xs" %>
							</div>
						</div>
					</div>
        		<% end %>
     		 </div>
      <% else %>
        <script type="text/javascript">
          window.location.href="/logout"
        </script>
      <% end %>
		</div>
	</body>
</html>

