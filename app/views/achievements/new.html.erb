<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "stylesheet.css" %>
  </head>
  <body>
    <img src="<%= asset_path('PurrsuitPersonagem.png') %>" class="other-page purrSuitImage" />
   <div class="principalSquare">
    <% if current_user && current_user.admin? %>
      <ul class="nav nav-pills">
        <li role="presentation" class="active"><a href="#">Achievement</a></li>
        <li role="presentation"><%= link_to "Quests", :quests_all%></li>
        <li role="presentation"><%= link_to "Logout", logout_path%></li>
      </ul>
      <div class="listSquare">
				<%= form_for(@achievement) do | form | %>
     		  <%= form.text_field :name, :class => "gamification_fields", :placeholder => "Achievement's name"%>
   			  <%= form.number_field :experience_points, :class => "gamification_fields", :placeholder => "Experience Points"%> 
    		  <%= form.text_field :description, :class => "gamification_fields", :placeholder => "Description" %> 
  		    <%= form.submit "Create Achievement", :class => "gamification_button btn btn-default btn-lg"%>
		    <% end %>
        <%= button_to "Cancel", :achievements_all, :class => "btn btn-default btn
-lg gamification_button", :method => :get %>
      </div>
      <% else %> 
        <script type="text/javascript">
          window.location.href="/logout"
        </script>
      <% end %>
    </div>
  </body>
</html>

