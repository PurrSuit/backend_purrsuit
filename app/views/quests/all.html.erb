<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "stylesheet.css" %>
  </head>
  <body>
		<img src="<%= asset_path('PurrsuitPersonagem.png') %>" class="other-page purrSuitImage" />
    <div class="principalSquare">
		<% if current_user && current_user.admin? %>
			<ul class="nav nav-pills">
				<li role="presentation"><%= link_to "Achievements", :achievements_all%></li>
				<li role="presentation" class="active"><a href="#">Quests</a></li>
				<li role="presentation"><%= link_to "Logout", logout_path%></li>
	      </ul>
	      <%= button_to "New Quest", :quests_new, :class => "btn btn-default btn-lg create_button", :method => :get%>
	      <div class="listSquare">
				<% @quest.each do | q | %>
	          <div class="panel panel-default">
	            <div class="panel-heading">
	              <h3 class="panel-title"><%= q.name %></h4>
	                <span class="label label-default">Quest</span>
	            </div>
	            <div class="panel-body">
	              <%= q.description%>
	              <div class="btn-toolbar button_group" role="group"> 
	                <%= button_to "Edit", quests_edit_path(q), :method => :get, :class => "option_button btn btn-default btn-xs" %>
	                <%= button_to "Delete", quests_delete_path(q), :method => :delete, :class => "option_button btn btn-default btn-xs" %>
	              </div>
	              </div>
	            </div>
	          <% end %>
	      </div>
			<% else %>
			  <script type="text/javascript">
			    window.location.href="/logout"
			  </script>
			<% end %>
    </div>
  </body>
</html>

