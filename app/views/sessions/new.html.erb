<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "stylesheet.css" %>
  </head>
  <body>
    <div class="principalSquare">
      <ul class="nav nav-pills">
        <li role="presentation" class="active"><a href="#">Login</a></li>
      </ul>
			<div class="alert alert-warning login" role="alert">Acesso restrito ao administrador</div>
      <div class="listSquare">
				<img src="<%= asset_path('PurrsuitPersonagem.png')%>" class="purrSuitImage" />
				<%= form_for :session, url: login_path do |f| %>
					<%= f.email_field :email, :placeholder => "Email", :class => "gamification_fields" %>
					<%= f.password_field :password, :placeholder => "Password", :class => "gamification_fields" %>
					<%= f.submit "Login", class: "btn btn-default btn-lg gamification_button" %>
				<% end %>
      </div>
    </div>
  </body>
</html>

