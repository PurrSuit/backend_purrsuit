<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag "stylesheet.css" %>
  <%= stylesheet_link_tag "materialize.css" %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body class="boddy">
    <nav>
      <div class="nav-wrapper">
        <img src="<%= asset_path('PurrsuitPersonagem.png')%>" class="purrSuitImage other-page" />
      <h1 id="tittle" class="brand-logo">PurrSuit</h1>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><%= link_to "Achievements", :achievements_all %></li>
          <li class="active"><%= link_to "Users", :users_all %></li>
          <li><%= link_to "Quests", :quests_all%></li>
      <li><%= link_to "Logout", logout_path%></li>
      </ul>
    </nav>
    <div class="principalSquare">
    <% if current_user && current_user.admin? %>
      <div class="listSquare">
        <%= form_for :user, url: users_update_path, method: :put do | form | %>
          <%= form.text_field :nickname, :class => "gamification_fields", :placeholder => "User's nickname"%>
          <%= form.text_field :email, :class => "gamification_fields", :placeholder => "Email" %>
          <%= form.submit "Save", :id => "gamification_button", :class => "btn btn-default btn-xs"%>
        <% end %>
        <%= button_to "Cancel", :users_all, :id => "gamification_button", :class => "btn btn-default btn-xs", :method => :get %>
      </div>
      <% else %>
        <script type="text/javascript">
          window.location.href="/logout"
        </script>
      <% end %>
    </div>
  </body>
</html>
